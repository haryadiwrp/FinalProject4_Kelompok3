<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/detailLayoutBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@color/white"
        android:clickable="true">

        <RelativeLayout
            android:id="@+id/book_no_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/book_layout"
            android:paddingHorizontal="20dp"
            android:paddingVertical="14dp">

            <TextView
                android:id="@+id/tglPemesanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23 Jul 2019"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:layout_toRightOf="@+id/tglPemesanan"
                android:id="@+id/waktuPemesanan"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="17:59"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/book_no_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/noBooking"
                android:text="Book No."
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/noBooking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="29789-0007"
                android:textColor="@color/white" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/book_no_layout"
            android:layout_margin="18dp"
            android:id="@+id/frameOrder"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/orderNamaBus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:text="Sempati Star"
                    android:textColor="@color/purple_500"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/rowNopol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="P 1923 NM"
                    android:textColor="@color/text_abu"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/jamAsalOrder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:text="02:30"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/terminalAwal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginRight="50dp"
                    android:lineHeight="18dp"
                    android:text="Terminal Amplas"
                    android:textColor="@color/text_abu"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/kotaAwal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginRight="40dp"
                    android:layout_marginLeft="-40dp"
                    android:lineHeight="18dp"
                    android:textAlignment="textStart"
                    android:text="Medan"
                    android:textColor="@color/text_abu"
                    android:textSize="12dp" />



                <androidx.constraintlayout.utils.widget.ImageFilterView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/check" />

                <TextView
                    android:id="@+id/statusPembayaran"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:includeFontPadding="false"
                    android:text="Issued"
                    android:textColor="@color/green"
                    android:textSize="14dp"
                    android:textStyle="bold" />


            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>



</RelativeLayout>