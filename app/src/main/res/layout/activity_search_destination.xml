<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_frame"
    tools:context=".SearchDestination1">


    <FrameLayout
        android:layout_width="276dp"
        android:layout_height="50dp"
        android:background="@drawable/card_style"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="33dp">

        <ImageView
            android:id="@+id/imageView24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/img_pin" />

        <TextView
            android:id="@+id/tv_pencarian_kota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            android:text="Nama Kota..."
            android:textSize="14dp"
            android:textColor="@color/text_abu"
            android:textStyle="bold" />
    </FrameLayout>

    <TextView
        android:id="@+id/btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:textSize="14dp"
        android:textColor="@color/text_abu"
        android:textStyle="bold"
        android:layout_marginLeft="333dp"
        android:layout_marginTop="48dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:background="@color/background_frame"
        android:id="@+id/recycler_view"
        android:layout_width="349dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="115dp"/>

</RelativeLayout>