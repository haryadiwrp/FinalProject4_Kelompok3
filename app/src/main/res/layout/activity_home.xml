<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logo_bux"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="34dp"/>

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/john_illust" />

    <FrameLayout
        android:layout_width="343dp"
        android:layout_height="257dp"
        android:background="@drawable/card_style"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="295dp">

        <LinearLayout
            android:id="@+id/select_departures"
            android:layout_width="278dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="34dp">
            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_abu"
                android:text="Departure"
                android:textSize="12dp"/>

            <TextView
                android:id="@+id/tv_departure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/purple_500"
                android:text="Try 'Medan'"
                android:textStyle="bold"
                android:textSize="16dp"/>

            <ImageView
                android:id="@+id/imageView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:srcCompat="@drawable/img_line" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/select_arrival"
            android:layout_width="278dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="105dp">
            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_abu"
                android:text="Arrival"
                android:textSize="12dp"/>

            <TextView
                android:id="@+id/tv_arrival"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/purple_500"
                android:text="Try 'Pekanbaru'"
                android:textStyle="bold"
                android:textSize="16dp"/>

            <ImageView
                android:id="@+id/imageView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:srcCompat="@drawable/img_line" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/icon_destination"
            android:layout_marginTop="55dp"
            android:layout_marginLeft="17dp"/>

        <ImageView
            android:id="@+id/imageView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/img_orang"
            android:layout_marginTop="197dp"
            android:layout_marginLeft="17dp"/>

        <ImageView
            android:id="@+id/imageView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/img_date"
            android:layout_marginTop="197dp"
            android:layout_marginLeft="180dp"/>

        <LinearLayout
            android:id="@+id/select_passengers"
            android:layout_width="118dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="176dp">
            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_abu"
                android:text="Passengers"
                android:textSize="12dp"/>

            <TextView
                android:id="@+id/tv_passengers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/purple_500"
                android:text="Try 1 ppl"
                android:textStyle="bold"
                android:textSize="16dp"/>

            <ImageView
                android:id="@+id/imageView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:srcCompat="@drawable/img_line2" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/select_date"
            android:layout_width="118dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="176dp">
            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_abu"
                android:text="Date"
                android:textSize="12dp"/>

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/purple_500"
                android:text="Select date"
                android:textStyle="bold"
                android:textSize="16dp"/>

            <ImageView
                android:id="@+id/imageView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:srcCompat="@drawable/img_line2" />
        </LinearLayout>
    </FrameLayout>

    <Button
        android:id="@+id/btn_searchbus"
        android:layout_width="343dp"
        android:layout_height="60dp"
        android:text="SEARCH BUS"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="573dp" />


</RelativeLayout>