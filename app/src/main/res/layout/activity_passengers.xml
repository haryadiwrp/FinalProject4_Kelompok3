<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Passengers"
    android:background="@color/white">

    <ImageView
        android:id="@+id/imageView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/img_line3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select how much passanger"
        android:textSize="16sp"
        android:textColor="@color/text_abu"
        android:textStyle="bold"
        android:layout_below="@id/imageView25"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="34dp"/>

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Older than 2 years old should buy a seat"
        android:textColor="@color/text_abu"
        android:textSize="12sp"
        android:layout_below="@id/tv1"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="34dp"/>

    <TextView
        android:id="@+id/value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="36sp"
        android:layout_below="@id/tv2"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="34dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textColor="@color/purple_500"/>

    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="passenger"
        android:textColor="@color/text_abu"
        android:textSize="14sp"
        android:layout_below="@id/value"
        android:layout_marginTop="3dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"/>

    <com.google.android.material.slider.Slider
        android:id="@+id/slider"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:valueFrom="0"
        android:valueTo="10"
        android:stepSize="1"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv3"
        android:layout_marginTop="35dp" />

    <TextView
        android:id="@+id/nol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/text_abu"
        android:textSize="14sp"
        android:layout_below="@id/value"
        android:layout_toLeftOf="@id/slider"
        android:layout_marginTop="70dp"
        android:layout_marginRight="7dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/sepuluh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:textColor="@color/text_abu"
        android:textSize="14sp"
        android:layout_below="@id/value"
        android:layout_toRightOf="@id/slider"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/slider"
        android:layout_marginTop="35dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="146dp"
            android:layout_height="60dp"
            android:text="cancel"
            android:backgroundTint="#EAEAEA"
            android:textColor="@color/purple_500"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_select"
            android:layout_width="146dp"
            android:layout_height="60dp"
            android:text="select"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:layout_toRightOf="@id/btn_cancel"
            android:layout_marginLeft="20dp" />

    </RelativeLayout>

</RelativeLayout>